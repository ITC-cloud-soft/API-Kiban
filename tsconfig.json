{
  "include": ["src/**/*", "docs/storybook/**/*", ".storybook/**/*", "webpack/**/*", "scripts/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  }
}
